<h1><%= title %></h1>

<% if posts.empty? %>
  <p>No Posts</p>
<% else %>
    <table>
    <thead>
        <tr>
        <th>User</th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% posts.each do |post| %>
        <tr>
            <td>By: <%= post.user.username %></td>
            <td><%= post.title %></td>
            <td><%= truncate(post.body, separator: /\n/) %></td>
            <td><%= link_to post.title, post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
<% end %>